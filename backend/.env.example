# Environment Configuration for Agri-AI Inference Service
# Copy this file to .env and fill in your actual values

# Roboflow API Configuration
RF_API_URL=https://serverless.roboflow.com
RF_API_KEY=YOUR_ROBOFLOW_API_KEY_HERE
WORKSPACE_NAME=YOUR_WORKSPACE_NAME_HERE

# Workflow IDs - Replace with your actual workflow IDs
RICE_WORKFLOW_ID=YOUR_RICE_WORKFLOW_ID_HERE
WHEAT_WORKFLOW_ID=YOUR_WHEAT_WORKFLOW_ID_HERE

# Detection Thresholds
MIN_CONFIDENCE=0.4
CONFIDENCE_MARGIN=0.02

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
# LOG_FILE=app.log  # Uncomment to enable file logging

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes